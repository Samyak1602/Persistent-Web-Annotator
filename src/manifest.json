{
  "manifest_version": 3,
  "name": "Persistent Web Annotator",
  "version": "1.0.0",
  "description": "Add persistent annotations to web pages with context menu integration",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Web Annotator"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}

